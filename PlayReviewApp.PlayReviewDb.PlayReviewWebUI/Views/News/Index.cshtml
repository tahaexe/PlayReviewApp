@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<News>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-9 my-3">
            @foreach (var newsItem in Model)
            {
                <a asp-action="Get" asp-route-id="@newsItem.NewsId" class="text-decoration-none text-body">
                    <div class="card mb-3">
                        <div class="row g-0">

                            <div class="col-md-4">
                                <img src="@newsItem.ImageUrl" class="img-fluid rounded-start" alt="@newsItem.Title">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@newsItem.Title</h5>
                                    <!-- Tek satırda metni kısaltır -->
                                    <br />
                                    <p class="card-text text-truncate" style="max-width: 100%;">@newsItem.Content</p>
                                    <br />
                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
            <br />
            <div class="d-flex justify-content-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
           {
               UlElementClasses = new[] { "pagination" },
               LiElementClasses = new[] { "page-item" },
               PageClasses = new[] { "page-link" },
               ActiveLiElementClass = "active"
           })
            </div>

        </div>
        <div class="col-md-3">
            @await Component.InvokeAsync("PopularGamesList")
        </div>
    </div>
</div>
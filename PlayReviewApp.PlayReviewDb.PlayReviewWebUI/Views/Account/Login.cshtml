@model LoginModel

<div class="row d-flex justify-content-center">
    <div class="col-sm-6 text-black d-flex justify-content-center">
        <div class="d-flex align-items-center px-5 mt-5 pt-5 pt-xl-0">

            <form method="post" asp-action="Login" class="mx-auto" style="max-width: 350px;">
                <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">
                    <i class="fa-solid fa-user"></i>
                    Log in
                </h3>
                <div>
                    <!-- Genel Hata Mesajları -->
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </div>
                <!-- Username Input -->
                <div class="form-outline mb-4">
                    <input type="text" id="UserName" asp-for="UserName" class="form-control form-control-lg" placeholder="Username" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <!-- Password Input -->
                <div class="form-outline mb-4">
                    <input type="password" id="Password" asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <!-- Submit Button -->
                <div class="pt-1 mb-4">
                    <button type="submit" class="btn btn-info btn-lg w-100">
                        <i class="fa-solid fa-unlock"></i>
                        Login
                    </button>
                </div>

                <p class="small mb-5 pb-lg-2 text-center"><a class="text-muted" href="#!">Forgot password?</a></p>
                <p>Don't have an account? <a asp-action="Register" class="link-info">Register here</a></p>
            </form>
        </div>
    </div>
</div>

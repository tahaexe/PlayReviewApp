<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Play Review</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayReviewApp.PlayReviewDb.PlayReviewWebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    <!-- Toastr -->
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body style="background-color: #f5f5f7">

    <header>
        <partial name="_Header" />
        @RenderSection("Header", false)
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Footer", false)
    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js" asp-append-version="true"></script>
    <!-- Toastr -->
    <script src="~/plugins/toastr/toastr.min.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {

                var toastOptions = {
                    positionClass: 'toast-top-right',
                    timeOut: 5000,
                    closeButton: true,
                    progressBar: true
                };

                var toastData = '@TempData["ToastMessage"]';

                if (toastData) {
                    var parts = toastData.split(':');

                    if (parts.length === 2) {
                        var messageType = parts[0].trim();
                        var message = parts[1].trim();

                        toastr[messageType](message, '', toastOptions);
                    }
                }
            });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
